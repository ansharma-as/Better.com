{
    "version": 2,
    "rewrites": [
      {
        "source": "/old-route",
        "destination": "/new-route"
      },
      {
        "source": "/api/:path*",
        "destination": "/api/:path*"
      }
    ],
    "redirects": [
      {
        "source": "/old-blog/:slug",
        "destination": "/blog/:slug",
        "permanent": true
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
  